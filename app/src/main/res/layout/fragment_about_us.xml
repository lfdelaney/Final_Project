<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liam.finalproject.AboutUs">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C27C19">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="About Us"
                android:id="@+id/titleAbout"
                android:layout_gravity="center"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/diamond"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Authors: Ryan Pierce and Liam Delaney"
                android:layout_below="@+id/titleAbout"
                android:id="@+id/authors" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Emails: rdpierce@syr.edu      lfdelane@syr.edu"
                android:id="@+id/emails"
                android:layout_below="@+id/authors"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
