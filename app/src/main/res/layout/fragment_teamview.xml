<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.liam.finalproject.teamview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/teamIcon"/>

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/teamName" />
        <ImageView
            android:id="@+id/teamIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.11"
        android:id="@+id/linear"
        android:orientation="vertical">
        <TextView
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/player3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/player4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/player5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/player6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/player7"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/player8"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/player9"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginBottom="6dp" />
    </LinearLayout>
</LinearLayout>